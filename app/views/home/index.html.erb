<h3>test</h3>

<div class="row">
  <div class="col-md-3">
    <table id="foods-list">
      <tr>
        <th> Name: </th>
        <th> Calories </th>
      </tr>
      <% @foods.each do |food| %>
        <tr id='food-item-<%= food.id %>'>
          <td class="food-name"><%= food.name %></td>
          <td class="food-calories"><%= food.calories %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-md-3">
    <table id="exercises-list">
      <tr>
        <th> Name: </th>
        <th> Calories </th>
      </tr>
      <% @exercises.each do |exercise| %>
        <tr id='exercise-item-<%= exercise.id %>'>
          <td class="exercise-name"><%= exercise.name %></td>
          <td class="exercise-calories"><%= exercise.calories %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
