<% if user_signed_in? %>
  <h3 class="text-center">Health Tracker for <%= current_user.username %> </h3>
  <div class="row">

  </div>
  <div class="col-md-4 food-calories text-center">
    <p>Calories consumed: <%= current_user.foods.sum(:calories) %></p>
    <%= form_tag foods_path, :method => 'get' do %>
      <%= text_field_tag :search %>
      <%= submit_tag "Search foods" %>
    <% end %>
  </div>

  <div class="col-md-4 exercise-calories text-center">
    <p>Calories burned: <%= current_user.exercises.sum(:calories) %> </p>
  </div>
  <div class="col-md-4 total-calories text-center">
    <p>
      Total Calories: <%= current_user.total_calories %>
    </p>
  </div>
<% else %>
  <h3>Health Tracker</h3>
<% end %>
